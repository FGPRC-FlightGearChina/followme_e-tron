        <indicator>
            <name>indicator</name>
            <mode>looped</mode>
            <path>Aircraft/followme_e-tron/Sounds/indicatorFlashing.wav</path>
            <condition>
                <and>
                    <or>
                        <equals>
                            <property>controls/lighting/indicator-left</property>
                            <value>1</value>
                        </equals>
                        <equals>
                            <property>controls/lighting/indicator-right</property>
                            <value>1</value>
                        </equals>
                    </or>
                    <equals>
                        <property>sim/current-view/internal</property>
                        <value>1</value>
                    </equals>
                </and>
            </condition>
            <volume>
                <value>0.4</value>
            </volume>
        </indicator>
        <armrest_box_open>
            <name>armrest_box_open</name>
            <mode>in-transit</mode>
            <path>Aircraft/followme_e-tron/Sounds/armrestbox_open.wav</path>
            <condition>
                <and>
                    <less-than>
                        <property>sim/multiplay/generic/float[27]</property>
                        <value>0.99</value>
                    </less-than>
                    <greater-than>
                        <property>sim/multiplay/generic/float[27]</property>
                        <value>0.01</value>
                    </greater-than>
                    <equals>
                        <property>controls/interior/armrest_cover_pos</property>
                        <value>1</value>
                    </equals>
                </and>
            </condition>
            <position>
                <x>1.91</x>
                <y>0</y>
                <z>0.75</z>
            </position>
            <volume>
                <factor>1</factor>
